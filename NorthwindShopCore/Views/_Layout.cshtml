<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>

    <style>
        #Title {
            color: deeppink;
        }

        body {
            font: 11pt Arial, Helvetica, sans-serif;
            margin: 0;
        }

        #header {
            background: #6EBEE8;
            padding: 15px;
        }

        #sidebar {
            float: left;
            border: 1px solid #333;
            width: 20%;
            padding: 5px;
            margin: 10px 10px 20px 5px;
        }

        #content {
            font-size: 18px;
            margin: 10px 5px 20px 25%;
            padding: 5px;
            border: 1px solid #333;
        }

        #footer {
            background: #333;
            padding: 5px;
            color: #fff;
            clear: left;
        }

        a {
            text-decoration: none;
        }

        #SignIn, #Register, #SignOff {
            padding: 6px;
            border: 1px solid #000000;
        }

        #userLayout {
            text-align: right;
        }

    </style>

    <div id="header">
        <h1 id="Title">Jessica Shop</h1>
        <div id="userLayout">
            <span id="SignIn">@Html.ActionLink("Sign In", "SignIn", "User")</span>
            <span id="Register">@Html.ActionLink("Register", "Register", "User")</span>
        </div>

    </div>
    <div id="sidebar">
        <p>@Html.ActionLink("Confections", "Confections", "Product")</p>
        <p>@Html.ActionLink("Beverages", "Beverages", "Product")</p>
        <hr />
        <br />
        <br />
        <br />
        <br />
        <p>@Html.ActionLink("Cart", "Cart", "Product")</p>
    </div>
    <div id="content">
        @RenderBody()
    </div>
    <div id="footer">&copy;  2018 - USA. Jessica Shop</div>

</body>
</html>